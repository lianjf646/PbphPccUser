<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <include
        android:id="@+id/include1"
        layout="@layout/titlbar_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/classify_mainlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#F4F4F5"
        android:cacheColorHint="#00000000"
        android:divider="#dcdcdc"
        android:dividerHeight="1px"
        android:fastScrollEnabled="false"
        android:listSelector="#00000000"
        android:padding="5dp"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/emptyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dip">

        <TextView
            android:id="@+id/TextViewTemp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:paddingLeft="20dip"
            android:text="历史搜索"
            android:textSize="13sp" />

        <com.android.ui.FlowLayout
            android:id="@+id/flowLayout"
            android:layout_width="fill_parent"
            android:layout_height="160dip"
            android:layout_below="@id/TextViewTemp"
            android:background="#ffffff" />


        <ImageView
            android:id="@+id/TextViewToast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flowLayout"
            android:gravity="center"
            android:paddingTop="60dip"
            android:src="@drawable/xag_qsy_ss"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>

