<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_adapter_myorder_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/dark_gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_adapter_myorder_list_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="已完成"
        android:textColor="@color/main_theme_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_adapter_myorder_list_getaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_adapter_myorder_list_time"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:text="买餐地点:"
        android:textColor="@color/black_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_adapter_myorder_list_sendaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_adapter_myorder_list_getaddress"
        android:text="送餐地点:"
        android:textColor="@color/black_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_adapter_myorder_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_adapter_myorder_list_getaddress"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ico_prompt"
        android:gravity="center"
        android:text="外卖"
        android:textColor="@color/black_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_adapter_myorder_list_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_adapter_myorder_list_type"
        android:layout_marginTop="10dp"
        android:textColor="@color/black_gray"
        android:textSize="15sp" />

</RelativeLayout>
