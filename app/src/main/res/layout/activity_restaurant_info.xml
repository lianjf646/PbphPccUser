<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="top|center"
    android:orientation="vertical">

    <include
        android:id="@+id/include_title"
        layout="@layout/include_layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shop_pic"
                android:layout_width="120dip"
                android:layout_height="120dip"
                android:layout_marginTop="40dip"
                android:src="@mipmap/banner_zw" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="60dip"
                    android:layout_height="2dip"
                    android:background="@drawable/restaurantinfo_left_line_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:text="公告"
                    android:textColor="#666666"
                    android:textSize="16sp" />

                <View
                    android:layout_width="60dip"
                    android:layout_height="2dip"
                    android:background="@drawable/restaurantinfo_right_line_bg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shop_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:textColor="#333333"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dark_e9e9e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dip">


                <TextView
                    android:layout_width="3dip"
                    android:layout_height="wrap_content"
                    android:background="#F37200"
                    android:textColor="#333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_line11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属食堂"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_line12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dark_e9e9e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dip">


                <TextView
                    android:layout_width="3dip"
                    android:layout_height="wrap_content"
                    android:background="#C491E0"
                    android:textColor="#333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_line21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家地址"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_line22"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dark_e9e9e9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dip">


                <TextView
                    android:layout_width="3dip"
                    android:layout_height="wrap_content"
                    android:background="#7CDC97"
                    android:textColor="#333333"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_line31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业时间"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_line32"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
