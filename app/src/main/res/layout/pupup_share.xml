<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_wx_person"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="微信"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/tv_share_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_wx_friend"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="朋友圈"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/tv_share_qqZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_qq_zone"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="QQ空间"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_qq_person"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="QQ"
            android:textColor="#999999" />
    </LinearLayout>


    <TextView

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/tv_share_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="#999999" />
</LinearLayout>