<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="姓名"
            android:textColor="@color/black_gray"
            android:textSize="15sp"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/et_add_address_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:cursorVisible="true"
            android:hint="请填写联系人"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColorHint="@color/dark_gray"
            android:textSize="15sp"
            android:typeface="monospace"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="电话"
            android:textColor="@color/black_gray"
            android:textSize="15sp"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/et_add_address_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:cursorVisible="true"
            android:hint="请填写联系电话"
            android:inputType="phone"
            android:maxLines="1"
            android:textColorHint="@color/dark_gray"
            android:textSize="15sp"
            android:typeface="monospace"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="地址"
            android:textColor="@color/black_gray"
            android:textSize="15sp"
            android:typeface="monospace"/>

        <EditText
            android:id="@+id/et_add_address_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:cursorVisible="true"
            android:drawableRight="@drawable/ico_right_arrow"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="请选择报修地址"
            android:inputType="textPersonName"
            android:textColorHint="@color/dark_gray"
            android:textSize="15sp"
            android:typeface="monospace"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray"/>


    <EditText
        android:id="@+id/et_add_address_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:cursorVisible="true"
        android:gravity="top|left"
        android:hint="请填写街道及门牌号"
        android:lines="5"
        android:padding="15dp"
        android:textColorHint="@color/ksw_md_solid_checked_disable"
        android:textSize="15sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_gray"/>

    <Button
        android:id="@+id/btn_add_address_submit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="30dp"
        android:background="@color/main_theme_color"
        android:clickable="false"
        android:text="添加地址"
        android:textColor="#FFFFFF"
        android:textSize="14sp"/>
</LinearLayout>
