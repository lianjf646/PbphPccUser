<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_orderdetail_contact"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="6dip"
        android:src="@drawable/ico_def_photo" />


    <TextView
        android:id="@+id/tv_orderdetail_contact"
        style="@style/mygroup_listview_textview1_medium_style"
        android:layout_alignTop="@+id/iv_orderdetail_contact"
        android:layout_toRightOf="@+id/iv_orderdetail_contact"
        android:layout_weight="1"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/tv_orderdetail_contact_call"
        style="@style/mygroup_listview_textview1_medium_style"
        android:layout_alignBottom="@+id/iv_orderdetail_contact"
        android:layout_marginRight="6dip"
        android:layout_toRightOf="@+id/iv_orderdetail_contact"
        android:layout_weight="1"
        android:gravity="right|center"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="无电话号码"
        android:textColor="#0000ff" />

    <ImageView
        android:id="@+id/iv_orderdetail_contact_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dip"
        android:src="@drawable/kuaidipic"
        android:visibility="gone" />

</RelativeLayout>





