<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_tab_color_bg</item>-->
        <item name="colorPrimaryDark">@color/main_tab_color_bg</item>
        <item name="colorAccent">@color/main_tab_color_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--<style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
